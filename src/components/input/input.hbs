<div class="form-item{{class}}">
    <div class="form-item__group">
        <label class="form-item__label" for="{{id}}">{{label}}</label>
        <input class="form-item__input{{class}} form-item__input--{{modifier}}" id="{{id}}" type="{{type}}" placeholder="{{value}}" name="{{name}}"

                {{#if readonly}}
                    readonly="readonly"
                {{/if}}
        >
    </div>

    {{#if errorName}}
        <div class="form-item__error">{{errorName}}</div>
    {{/if}}
</div>
